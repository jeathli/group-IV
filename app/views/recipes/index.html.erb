<div>
  <h1 class="search_results__title">Your search results:</h1>
  <div class="container__recipies--list">
    <ul><% @recipes.each do |r| %>
      <li class="list_item">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand">
            <%= image_tag r.img_url, :class=> "image" %>
            <h2 class="mdl-card__title-text"><%= r.name %></h2>
          </div>
          <div class="mdl-card__supporting-text">
            <%= truncate(r.description, :length => 100) %>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                <%= link_to "See full recipe", r, :class=> "recipe__link" %>
            </a>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="mdl-grid">
  <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell mdl-cell--4-col">
      <h1 class="container__recipe--name"> New ingredient</h1>

      <div>
        <% if @ingredient.errors.any? %>
        <ul>
          <% @ingredient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
        <% end %>
      </div>

      <%= form_for [:admin, @ingredient] do |i| %>
      <div class="group flex-for-div ">
        <%= i.text_field :name %>
      </div>

      <div class="group margin font">
        <button type="submit"
          class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
          Submit
        </button>
       </div>
      <% end %>
  </div>
<div class="mdl-layout-spacer"></div>
</div>

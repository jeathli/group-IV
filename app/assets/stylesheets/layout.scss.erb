$color-brand: #f9f9f9;

body {
  background-color: $color-brand;
}

/*-- link --:*/
.link {
  font-size: 2em;
  color: #000;

  &:hover {
    color: darken($color-brand, 50%);
  }
}

/*-- layout --*/
.advent-pro-font {
  font-family: 'Advent Pro', sans-serif !important;
  font-weight: 500;
}

/*-- header --*/
.lunch-header {
  background-color: $color-brand;
}

.lunch-header-row {
  justify-content: center;
}

.lunch-header-logo {
  height: 30px;
}

.mdl-layout__drawer-button {
  color: #000;
}

/*-- index layout --*/
.lunch-cover {
  background: url(<%= asset_path("top2.png") %>) center / cover;
  width: 100%;
  height: 100vh;
}

.lunch-gap--none {
  margin: 0;
  padding: 0;
}

/*-- index --*/
.lunch-main-right {
  margin: auto;
  padding: 0;
  text-align: center;
}

.lunch-main-left {
  margin: auto;
  padding: 0;
  text-align: center;
}

.lunch-main-left__box {
  margin: 0;
  padding: 40px;
}

.lunch-main-left__slogan--main {
  font-family: 'Pacifico';
  font-size: 4em;
  color: #fff;
  margin-bottom: 20px;
  line-height: 2;
  margin-top: 60px
}

.lunch-main-left__slogan--sec {
  font-size: 7em;
  margin-top: 77px;
  color: #fff;
}

/*-- index elements--*/
.lunch-main__button,
.ingredients-go__button {
  color: white;
  background: black;
  padding: 0;
  border-radius: 50%;
  height: 150px;
  width: 150px;
  border: 0;
  font-size: 4em;
  left: -17%;
  position: relative;

  &:focus {
    outline: 0;
  }
}

.position-inherit {
  position: inherit;
}

/*-- ingredients --*/
.ingrediets-cover {
  width: 100%;
  height: 100vh;
  text-align: center;
}

.ingredients-cover--center {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.fridge-image {
  margin-top: 20px;
  margin-bottom: 20px;
  object-fit: contain;
}

.form {
  margin-top: 20px;
}

.ingredients-question {
  font-family: 'Pacifico';
  font-size: 4em;
  margin-top: 45px;
}

.grid--center {
  justify-content: center !important;
}

.ingredients-go__button {
  left: 0;
  margin-top: 30px;
}

.select-landing {
  font-family: "Calibri";
  font-size: 20px;
  background-color: white;
  text-align: center;
  height: 37px;
}
